@model IEnumerable<MyCineBel.Client.Models.Cinema>

@{
    ViewData["Title"] = "Index";
}


<h3 style="">LES CINEMAS</h3>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 mt-2">
            <div class="card border-0 rounded shadow bg-dark">
                <h6 class="card-title p-2 text-center">
                    <span style="min-height:2.5rem;" class="d-block">
                        @Html.DisplayFor(modelItem => item.CIN_Name)
                    </span>

                </h6>
                <div class="card-img-top d-flex m-auto justify-content-center">
                    <img src="https://jeanmusoni.blob.core.windows.net/cineimage/@item.CIN_Photo" style="height:250px;width:100%" />
                </div>



                @*<div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>*@
                <ul class="list-group list-group-flush bg-dark text-small">
                    <li class="list-group-item bg-dark">
                        <div class="row w-100 no-gutters">
                            <div class="col-5">
                                @Html.DisplayNameFor(model => model.CIN_Ville)
                            </div>
                            <div class="col-7 prevent-overflow" title=" @Html.DisplayFor(modelItem => item.CIN_Ville)">
                                @Html.DisplayFor(modelItem => item.CIN_Ville)
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item bg-dark">
                        <div class="row w-100 no-gutters">
                            <div class="col-5">
                                @Html.DisplayNameFor(model => model.CIN_Rue)
                            </div>
                            <div class="col-7 prevent-overflow">
                                @Html.DisplayFor(modelItem => item.CIN_Rue)
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item bg-dark">
                        <div class="row w-100 no-gutters">
                            <div class="col-5">
                                @Html.DisplayNameFor(modelItem => item.CIN_CodePostal)
                            </div>
                            <div class="col-7 prevent-overflow">
                                @Html.DisplayFor(modelItem => item.CIN_CodePostal)
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item bg-dark text-center">
                        <a asp-controller="Cinema" asp-action="getFilmByCinemaAndDate" class="card-link a-text" asp-route-idDuCine="@item.CIN_Id"> NOTRE PROGRAMME </a>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>