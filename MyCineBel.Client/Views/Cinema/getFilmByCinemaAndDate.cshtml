@model IEnumerable<MyCineBel.Client.ViewModel.ProcFilmCinema>

@{
    ViewData["Title"] = "getFilmByCinemaAndDate";
}

<div class="text-center">

    <img src="https://jeanmusoni.blob.core.windows.net/cineimage/@ViewBag.Cinephoto" width="500" height="200" />
</div>


<h1 class="text-center" style="color:#dc3545">@ViewBag.Cinename :  LES FILMS</h1>
<br />


<table class="table table-borderless text-light">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.filmTitre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film_Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilmbandeAnnocne)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                <a asp-controller="Cinema" asp-action="getSeanceByCinemaAndDate" asp-route-idDuCine="@item.CIN_Id" asp-route-filmId="@item.FilmId">
                    @Html.DisplayFor(modelItem => item.filmTitre)
                </a>
            </td>
            <td>
                <img src="https://jeanmusoni.blob.core.windows.net/cineimage/@item.Film_Image" width="100" height="150" />
            </td>
            <td>
                <video width="220" height="140" controls>

                    <source src="https://jeanmusoni.blob.core.windows.net/cineimage/@item.FilmbandeAnnocne" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </td>

            <td>
                <a asp-controller="Cinema" asp-action="getSeanceByCinemaAndDate" asp-route-idDuCine="@item.CIN_Id" asp-route-filmId="@item.FilmId">
                    LES SEANCES
                </a>

            </td>
          
        </tr>
        }
    </tbody>
</table>
