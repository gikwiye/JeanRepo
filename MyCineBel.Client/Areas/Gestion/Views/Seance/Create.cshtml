@model MyCineBel.Client.Models.Seance

@{
    ViewData["Title"] = "Create";
}

<hr />

<h1 class="text-light">Create Seance</h1>

<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SEA_Date" class="control-label">Date de la seance</label>
                <input asp-for="SEA_Date" class="form-control" />
                <span asp-validation-for="SEA_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SEA_HeureDebut" class="control-label">Debut de la seance</label>
                <input asp-for="SEA_HeureDebut" class="form-control" />
                <span asp-validation-for="SEA_HeureDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sea_MaxPlace" class="control-label">Maximum de place</label>
                <input asp-for="Sea_MaxPlace" class="form-control" />
                <span asp-validation-for="Sea_MaxPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sea_SAL_Id" class="control-label">Salle</label>
                <select asp-for="Sea_SAL_Id" class="form-control" asp-items="ViewBag.MesSalles ">
                    <option value="">-- Select le nom de la salle --</option>
                </select>
                <span asp-validation-for="Sea_SAL_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sea_Film_Id" class="control-label">Film</label>
                <select asp-for="Sea_Film_Id" class="form-control" asp-items="ViewBag.MesFilms ">
                    <option value="">-- Select film --</option>
                </select>
                <span asp-validation-for="Sea_Film_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

