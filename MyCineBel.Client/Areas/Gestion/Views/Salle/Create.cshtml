@model MyCineBel.Client.Models.Salle

@{
    ViewData["Title"] = "Create";
}
 <hr />
<h1 class="text-light">Create Salle</h1>


<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SAL_CIN_Id" value="@ViewBag.SAL_CIN_Id" />

            <div class="form-group">
                <label asp-for="SAL_Name" class="control-label"></label>
                <input asp-for="SAL_Name" class="form-control" />
                <span asp-validation-for="SAL_Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SAL_Capacite" class="control-label"></label>
                <input asp-for="SAL_Capacite" class="form-control" />
                <span asp-validation-for="SAL_Capacite" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SAL_Climatise" /> @Html.DisplayNameFor(model => model.SAL_Climatise)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SAL_3Dpossible" /> @Html.DisplayNameFor(model => model.SAL_3Dpossible)
                </label>
            </div>

            <div class="form-group">
                <label>CINEMA :</label>
                <input class="align-content-center" value="@ViewBag.cinema" readonly="readonly" />

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

