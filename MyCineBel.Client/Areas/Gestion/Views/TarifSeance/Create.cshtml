@model MyCineBel.Client.Models.TarifSeance

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-light">Creer les Tarifs de la seance</h1>


<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TarSea_Prix" class="control-label"></label>
