            </div>

            <div class="form-group">
                <label asp-for="TarSea_TAR_Id" class="control-label"></label>
                <select asp-for="TarSea_TAR_Id" class="form-control" asp-items="ViewBag.tarif ">
                    <option value="">-- Select le type de tarif --</option>
                </select>
                <span asp-validation-for="TarSea_TAR_Id" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="TarSea_Sea_Id" value="@ViewBag.seance" />

