@model MyCineBel.Client.Models.Cinema

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Editer un cinema</h1>


<hr />
<div class="row">
    <div class="col-md-4 text-light" >
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CIN_Id" />

            <div class="form-group">
                <label asp-for="CIN_Name" class="control-label"></label>
                <input asp-for="CIN_Name" class="form-control" />
                <span asp-validation-for="CIN_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN_Photo" class="control-label"></label>
                <input asp-for="CIN_Photo" class="form-control" />
                <span asp-validation-for="CIN_Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN_Ville" class="control-label"></label>
                <input asp-for="CIN_Ville" class="form-control" />
                <span asp-validation-for="CIN_Ville" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN_Rue" class="control-label"></label>
                <input asp-for="CIN_Rue" class="form-control" />
                <span asp-validation-for="CIN_Rue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CIN_CodePostal" class="control-label"></label>
                <input asp-for="CIN_CodePostal" class="form-control" />
                <span asp-validation-for="CIN_CodePostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

